@model IEnumerable<PruebaGit.Web.Models.Registrar_Hospital>

@{
    ViewBag.Title = "Index";
}



<div class="container">
    <div class="row justify-content-center">
        <p>
            @Html.ActionLink("Registra un nuevo hospital", "Create", "Registrar_Hospitals", new { @class = "  btn btn-outline-info  navbar-brand text-dark" })
        </p>
        <div class="col-md-12 bg-info">
            <div class="card">
                <div class="card-body">
                    <table class="table table-hover bg-info">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Hospital.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NomHospital)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Estado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ciudad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Colonia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Calle)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Codigo_Postal)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hospital.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomHospital)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Estado)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ciudad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Colonia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Calle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Codigo_Postal)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning fas fa-trash text-light" }) |
                                    @Html.ActionLink("Ver", "Details", new { id = item.Id }, new { @class = "btn btn-success fas fa-eye" }) |
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fas fa-trash" })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
                </div>
            </div>
        </div>
    </div>


@model IEnumerable<PruebaGit.Web.Models.Trabajador>

@{
    ViewBag.Title = "Index";
}

    <div class="container">
        <div class="row justify-content-center">
            @*Se agrega el modal*@
            <p class="mt-3 text-center">
                <a data-toggle="modal" data-target="#AddModal" class="nav navbar-brand text-dark btn btn-outline-primary " href="#">Agregar trabajador</a>
            </p>
            @*TABLA*@
        </div>
        <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 bg-gradient-primary">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-hover">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th></th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning fas fa-edit text-light" }) |
                                        @Html.ActionLink("Ver", "Details", new { id = item.Id }, new { @class = "btn btn-success fas fa-eye" }) |
                                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fas fa-ban" })
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
        </div>

        @*MODAL*@
        <div class="modal fade" id="AddModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                @*COLOR DE FONDO DE EN MEDIO*@
                <div class="modal-content">
                    @*COLOR DE FONDO DE LA PARTE DE ARRIBA*@
                    <div class="modal-header bg-info">
                        <h2 class="modal-title text-white text-center " id="exampleModalLabel">Agregar Trabajador</h2>
                        <button type="button" class="close btn-danger" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <form action="@Url.Action("Create","Trabajadors" )" method="post">
                        @Html.AntiForgeryToken()
                        <div class="modal-body">
                            <div class="form-group">
                                <label class="col-md-6 col-form-label">
                                    Nombre del hospital
                                </label>
                                <div class="col-md-10">
                                    <input type="text" value="" name="Nombre" class="form-control" />
                                </div>
                            </div>
                        </div>
                        @*COLOR DE FONDO DE LA PARTE DE ABAJO*@
                        <div class="modal-footer bg-info">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-danger">Guardar cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

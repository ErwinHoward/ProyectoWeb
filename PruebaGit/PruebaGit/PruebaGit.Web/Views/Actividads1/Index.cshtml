@model IEnumerable<PruebaGit.Web.Models.Actividad>

@{
    ViewBag.Title = "Index";
}


@*TABLA*@
<div class="container">
    <div class="row justify-content-center">
        @*SE AGREGO EL MODAL*@
        <p class="mt-3">
            <a data-toggle="modal" data-target="#AddModal" class="nav navbar-brand text-dark btn btn-outline-info" href="#">Agregar Actividad</a>
        </p>
        </div>
    </div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 bg-info">
            <div class="card">
                <div class="card-body">
                    <table class="table table-hover bg-info">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ActividadId)
                            </th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ActividadId)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning fas fa-trash text-light" }) |
                                    @Html.ActionLink("Ver", "Details", new { id = item.Id }, new { @class = "btn btn-success fas fa-eye" }) |
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fas fa-trash" })
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@*MODAL*@
<div class="modal fade" id="AddModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h2 class="modal-title text-center text-white" id="exampleModalLabel">Agregar actividad</h2>
                <button type="button" class="close btn btn-danger" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form action="@Url.Action("Create","Actividads1" )" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-md-6 col-form-label">
                            Nombre
                        </label>
                        <div class="col-md-10">
                            <input type="text" value="" name="ActividadId" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-info">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-danger">Guardar cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

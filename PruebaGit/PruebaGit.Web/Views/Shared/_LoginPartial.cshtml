@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-brand" }))
    {
        @Html.AntiForgeryToken()



  
            <div class="bg-light py-1 ">
                <a class="" href="@Url.Action("Details", "Profile")" title="Perfil">Perfil - </a>
                <a class="" href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a>
            </div>


    }
}
else
{

    @Html.ActionLink("  Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { title = "Register", id = "registerLink" });
    @Html.ActionLink(" Iniciar", "Login", "Account", routeValues: null, htmlAttributes: new { title = "Iniciar Sesion", id = "loginLink" });

}


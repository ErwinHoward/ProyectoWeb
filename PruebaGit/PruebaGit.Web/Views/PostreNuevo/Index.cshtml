@model IEnumerable<PruebaGit.Web.Models.PostreNuevo>

@{
    ViewBag.Title = "Agregar Postre - ";
}

<div class="container">
    <div class="row justify-content-center">
        <p class="mt-3 text-center">
            <a data-toggle="modal" data-target="#AddModal" class="nav navbar-brand text-dark btn btn-warning pl-3 pr-3" href="#">Agregar Postre</a>
        </p>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-hover bg-gradient-warning">
                            
                                <tr class=" text-dark">
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nombre)
                                    </th>
                                    <th></th>
                                </tr >
                                @foreach (var item in Model)
                                {
                                    <tr class="text-gray-500 bg-light">
                                        <td class="text-gray-900">
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td class="text-dark">
                                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-info fas fa-edit text-dark" }) |
                                            @Html.ActionLink("Ver", "Details", new { id = item.Id }, new { @class = "btn btn-warning fas fa-eye text-dark" }) |
                                            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-success fas fa-times-circle text-dark" })
                                        </td>
                                    </tr>
                                }
                            </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
        <div class="modal fade text-dark" id="AddModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-warning">
                        <h2 class="modal-title  text-center " id="exampleModalLabel">Agregar Postre</h2>
                        <button type="button" class="close btn-danger" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <form action="@Url.Action("Create","PostreNuevo" )" method="post">
                        @Html.AntiForgeryToken()
                        <div class="modal-body">
                            <div class="form-group">
                                <label class="col-md-6 col-form-label">
                                  Postre
                                </label>
                                <div class="col-md-10">
                                    <input type="text" value="" name="Nombre" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-dark">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

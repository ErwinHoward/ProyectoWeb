@model PruebaGit.Web.Models.Trabajador

@{
    ViewBag.Title = "Ver Detalles";
}

<div class="container-fluid text-light">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card"  style="background-color:aliceblue;color:blue;">
                <div class="card-body text-lg-center ">
                    <h1>Trabajadores</h1>

                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>

                    </dl>
                </div>
                <div class="form text-center p-3">
                    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "text-light btn btn-warning" })
                    <a href="@Url.Action("Index","Trabajadors")" class="btn btn-primary">Regresar</a>
                </div>

            </div>
        </div>
    </div>

</div>
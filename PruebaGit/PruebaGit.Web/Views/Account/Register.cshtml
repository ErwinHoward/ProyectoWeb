@model PruebaGit.Web.Models.RegisterViewModel

@{
    ViewBag.Title = "Registrarse";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesion</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/sb-admin-2.min.css" />
</head>
<body class=" bg-login-image" style=" background-image: url('https://cdn.pixabay.com/photo/2015/03/26/11/09/coffee-692560_960_720.jpg');">
    
    <div class="container pl-0 " style=" margin-top: 100px; margin-left: 80px;">
        <div class=" justify-content-center m-3">
            <div class="col-lg-6 d-none d-lg-block rounded border-primary">
                <div class="col-lg-12">
                    <div class="p-5">


                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <h4 class="text-center text-white">Crear Cuenta</h4>
                            <hr />
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group" style="margin-left: 50px;">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-12 control-label text-white" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group" style="margin-left: 50px;">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-12 control-label text-white" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group" style="margin-left: 50px;">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12 control-label text-white" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <p class="text-center" style="padding-left: 30px; margin-top: 18px;">
                                        <button class="btn btn-primary text-black-50" style="background-color:#f9e2cf"> @Html.ActionLink("Regresar", "Login")</button>
                                    </p>
                                </div>
                                <div class="form-group text-center" style="margin-right: 75px; margin-top: 18px;">
                                    <div class="col-md-offset-1 col-md-8">
                                        <input type="submit" class="btn btn-primary text-black-50" value="Confirmar" style="background-color:#f9e2cf"/>
                                    </div>
                                </div>
                            </div>
                            <hr/>
                        }
                    </div>
                </div>
            </div>
        </div>
        </div>
</body>
</html>



    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
